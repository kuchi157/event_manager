<div class="background2">
  <nav
    class="navbar sticky-top navbar-expand-xl navbar-dark"
    style="background-color: #020f17;"
  >
    <a class="navbar-brand" href="/dashboard">HUBX</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarTogglerDemo02"
      aria-controls="navbarTogglerDemo02"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
      <ul class="navbar-nav mr-auto mt-2 mt-lg-0 mx-4 px-3">
        <li class="nav-item">
          <a class="nav-link" href="/dashboard">My Dashboard </a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/events">Events</a>
        </li>
        <li class="nav-item active">
          <a class="nav-link" href="/createEvent"
            >Create Event<span class="sr-only">(current)</span></a
          >
        </li>
      </ul>
      <a href="/users/logout" class="btn btn_color">Logout</a>
    </div>
  </nav>

  <div class="background_photo">
    <div class="container">
      <div class="row pt-5">
        <div class="col-md-6 m-auto">
          <div class="card card-body">
            <h1 class="text-center mb-3">
              <i class="fas fa-plus-square"></i> Create Event
            </h1>
            <% include ./partials/messages %>
            <form action="/createEvent" method="POST">
              <div class="form-group">
                <label for="name"> Event Name</label>
                <input
                  type="name"
                  id="name"
                  name="name"
                  class="form-control"
                  placeholder="Enter Event Name"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="location">Location</label>
                <input
                  type="location"
                  id="location"
                  name="location"
                  class="form-control"
                  placeholder="Enter the location"
                  value="<%= typeof name != 'undefined' ? name : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="date">Date</label>
                <input
                  type="date"
                  id="date"
                  name="date"
                  class="form-control"
                  placeholder="Enter the Date of Event"
                  value="<%= typeof date != 'undefined' ? date : '' %>"
                />
              </div>
              <div class="form-group">
                <label for="description">Description</label>
                <textarea
                  name="description"
                  id="description"
                  name="password2"
                  class="form-control"
                  placeholder="About the Event"
                ></textarea>
              </div>
              <button type="submit" class="btn btn_color btn-block">
                Submit
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div style="padding: 6rem;"></div>
</div>
